            <div class="divider {{'hide' if config.hideStatusbar}}"></div>
            <div class="container info-icons">
                <div class="item {{'hides' if not centralLock.value}}">
                    <i class="fa-solid {{'fa-lock' if isLocked else 'fa-lock-open danger'}}"></i>
                    <span>{% if isLocked %}{{ "LOCKED" | translate | upper }}{% else %}{{ "UNLOCKED" | translate | upper }}{% endif %}</span>
                </div>
                <div class="item {{'hide' if not averageSpeed.value}}">
                    <i class="fa-solid fa-gauge-high"></i>
                    <span>{{averageSpeed.value}} km/h</span>
                </div>
                <div class="item {{'hide' if not odometer.value}}">
                    <i class="fa-solid fa-road"></i>
                    <span>{{odometer.value}} km</span>
                </div>
                <div class="item {{'hide' if (not averageFuelConsumption.value) and (not averageEnergyConsumption.value)}}">
                    <i class="fa-solid fa-chart-line"></i>
                    <span class="{{'hide' if not batteryPoweredCar}}">{{averageEnergyConsumption.value}} kWh/100km</span>
                    <br class="{{'hide' if (not hybridCar)}}"><i class="fa-solid fa-chart-line {{'hide' if (not hybridCar)}}"></i>
                    <span class="{{'hide' if not fuelPoweredCar}}">{{averageFuelConsumption.value}} L/100km</span>
                </div>
            </div>
        </div>

        {# ALERTS ICONS #}
