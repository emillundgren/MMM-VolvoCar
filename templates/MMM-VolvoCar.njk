        <div class="wrapper">
            <center>
                <p>
                    <i class="fa fa-exclamation-triangle"></i> <b>{{ "ERROR_API_HEADER" | translate | upper }}</b><br>
                    {{ "ERROR_API_TEXT" | translate }}
                </p>
            </center>
        </div>
    </div>
{% elif not authenticated %}
    <div id="mmm-volvocar" class="mmm-volvocar">
        <div class="wrapper">
            <center>
                    <p><b>{{ "AUTHENTICATE_HEADER" | translate | upper }}</b><br>
                {% if config.authShowQrCode and qrCode %}
                    {{ "AUTHENTICATE_TEXT_QR" | translate }}
                    <a href="{{authUrl}}" target="_blank"><img src="{{ qrCode }}" alt='{{ "AUTHENTICATE_HEADER_QR" | translate | upper }}' /></a>
                {% else %}
                    <a href="{{authUrl}}" target="_blank">{{ "AUTHENTICATE_TEXT_LINK" | translate }}</a></p>
                {% endif %}
            </center>
        </div>
    </div>
{% else %}
    <div id="mmm-volvocar" class="mmm-volvocar">
        {# HEADER IMAGE #}
        <div class="wrapper {{'hide' if config.hideHeaderImage}}">
            <div class="header-image">
                <img src="{{config.headerImageFile}}"></img>
                <div class="container layout-{{config.headerImageLayout}}">
                    <span class="item {{'hide' if config.hideHeaderImageTextModel}}">{{vehicleDetails.descriptions.model}} {{vehicleDetails.modelYear}}</span>
                    <span class="item {{'hide' if config.hideHeaderImageTextCustom}}">{{config.headerImageCustomText}}</span>
                </div>
            </div>
        </div>

        {# STATUSBARS #}
        <div class="wrapper {{'hide' if config.hideStatusbar}}">
            {# FUEL LEVEL STATUSBAR #}
            <div class="container statusbar {{'hide' if not fuelPoweredCar}}">
                <div class="item align-left">
                    <i class="fa-solid fa-gas-pump"></i>
                    <span>{{distanceToEmptyTank.value}} km</span>
                </div>
                <div class="item align-right">
                    <div class="statusbar-container">
                        <div class="statusbar-bar {{setStatusbarColor(fuelLevelPercentage)}}" style="width: {{fuelLevelPercentage}}%">
                            <div class="statusbar-text">{{fuelLevelPercentage}}%</div>
                        </div>
                    </div>
                </div>
            </div>

            {# ELECTRIC CAR BATTERY STATUSBAR #}
            <div class="container statusbar {{'hide' if not batteryPoweredCar}}">
                <div class="item align-left">
                    <i class="fa-solid {{'fa-plug' if isCharging else 'fa-bolt'}}"></i>
                    <span>{{estimatedChargingTimeToTargetBatteryChargeLevel.value+' min' if isCharging else electricRange.value+' km'}}</span>
                </div>
                <div class="item align-right">
                    <div class="statusbar-container">
                        <div class="statusbar-bar {{'charging-animation' if isCharging and config.useStatusbarChargingAnimation}} {{setStatusbarColor(batteryChargeLevel.value)}}" style="width: {{batteryChargeLevel.value | round(0, floor)}}%">
                            <div class="statusbar-text">{{batteryChargeLevel.value | round(0, floor)}}%</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

